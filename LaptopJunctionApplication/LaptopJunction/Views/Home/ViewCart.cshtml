@*showing cart item with conditions*@
@model LaptopJunction.Models.Laptop
<h1>View Cart</h1>
<div class="container">
    @*@if (TempData["total"] == null)
    {
        <h1>cart is empty</h1>
        <a href="@Url.Action("Index","Home")">go back</a>
    }
    else
    {*@
        
        <div class="row">

            <div class="col-md-12 ftco-animate fadeInUp ftco-animated">
                <div class="cart-list">
                    @*<h3>Total Item : @TempData["item_count"]</h3>*@
                    <table class="table">
                        <thead class="thead-primary">
                            <tr class="text-center">

                                <th>ID</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Qty</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in TempData["cart"] as List<LaptopJunction.Models.Cart>)
                            {


                                <tr class="text-center">
                                    @*<td class="product-remove"><a href="@Url.Action("remove", "Home", new { id = item.lid })"><span class="ion-ios-close"></span></a></td>*@
                                    <td class="product-name">
                                        <h3>@item.lid</h3>
                                    </td>

                                    <td class="product-name">
                                        <h3>@item.lname</h3>

                                    </td>

                                    <td class="price">@item.lprice</td>

                                    <td class="quantity">
                                        @item.qty
                                    </td>

                                    <td class="total">Rs.@item.total</td>
                                </tr>

                                <!-- END TR-->
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <div class="row justify-content-end">


            <div class="col-lg-4 mt-5 cart-wrap ftco-animate fadeInUp ftco-animated">
                <div class="cart-total mb-3">
                    <h3>Cart Total</h3>


                    <hr>
                    <p class="d-flex total-price">
                        <span>Total</span>
                    <<span>Rs.</span>
                    </p>
                </div>



            </div>
        </div>
        </div>
        
        